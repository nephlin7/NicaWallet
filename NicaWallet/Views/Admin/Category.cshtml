@model IEnumerable<NicaWallet.Models.Category>

@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Categorias</h2>

<p>
    @*@Html.ActionLink("Create New", "Create")*@
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#myModal">
        <i class="fa fa-plus" aria-hidden="true"></i>  Crear Nueva Categoria
    </button>
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model.Where(x => x.IsParent == true))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
                <ul class="">
                    @foreach (var item2 in Model.Where(x => x.ParentId == item.CategoryId))
                    {
                        <li class="">
                            @item2.CategoryName
                            <button type="button" class="btnDelete" onclick="return confirm('Estas seguro que quieres eliminar esta categoria?')" categoryId="@item2.CategoryId"> <i class="fa fa-trash-o" aria-hidden="true"></i></button>
                            @Html.Hidden("CategoryId", item2.CategoryId)
                        </li>
                    }
                </ul>

                @Html.HiddenFor(modelItem => item.ParentId)
                @Html.HiddenFor(modelItem => item.IsParent)
            </td>
            <td>
                <div class="">
                    <button data-toggle="tooltip" title="Editar" categoryId="@item.CategoryId" class="btnUpdate btn btn-info"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></button>
                    <button data-toggle="tooltip" title="Eliminar" type="button" onclick="return confirm('Estas seguro que quieres eliminar esta categoria?')" class="btn btn-danger btnDelete" categoryId="@item.CategoryId" name="Delete" value="Delete"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
                    <button type="button" parentId="@item.CategoryId" class="btn btn-primary ModalActive" data-toggle="modal" data-target="#myModal">
                        <i class="fa fa-plus" aria-hidden="true"></i>
                    </button>
                </div>

            </td>
        </tr>
    }

</table>


<!-- Modal Create Category -->
@using (Html.BeginForm("CreateCategory", "admin", FormMethod.Post))
{
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Nueva Categoria</h4>
                </div>
                <div class="modal-body">

                    @Html.AntiForgeryToken()

                    @Html.Label("Nombre Categoria")
                    @Html.TextBox("CategoryName", "", new { @class = "form-control" })
                    @Html.Hidden("ParentId")
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <input type="submit" class="btn btn-info" name="Crear" value="Crear" />
                </div>
            </div>
        </div>
    </div>
}
@section scripts{
    <script>
        $('.ModalActive').click(function () {
            var p = $(this).attr('parentId');
            $('input#ParentId').val(p);
        })
        //Delete Category
        $('.btnDelete').click(function () {
            var categoryId = $(this).attr('categoryId');
            var url = "/admin/DeleteCategory";
            $.ajax({
                url: url,
                data: { 'categoryId': categoryId },
                type: "post",
                cache: false
            }).success(function (response) {
                if (response.ResponseCode == "200") {
                    alert("Bien Hecho se elimino correctamente")
                    location.reload();
                } else {
                    alert("No se puede eliminar tiene categorias hijas")
                }
            }).error(function (error) {
                alert("Ah ocurrido un error, Intentelo de nuevo");
                location.reload();
            });
            return true;
        });
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
        //Update Category
        $('.btnUpdate').click(function () {
            var categoryId = $(this).attr('categoryId');
            var url = "/admin/UpdateCategory";
            $.ajax({
                url: url,
                data: { 'categoryId': categoryId },
                type: "post",
                cache: false
            }).success(function (response) {
                if (response.ResponseCode == "200") {
                    alert("Bien Hecho se actualizo correctamente")
                    location.reload();
                } else {
                    alert("Ah Ocurrido un error")
                }
            }).error(function (error) {
                alert("Ah ocurrido un error, Intentelo de nuevo");
                location.reload();
            });
            return true;
        });
    </script>
}